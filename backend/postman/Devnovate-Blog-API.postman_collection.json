    {
      "name": "Blogs",
      "item": [
        {
          "name": "Get All Blogs (summary)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs?page={{page}}&limit={{limit}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs"],
              "query": [
                { "key": "page", "value": "{{page}}" },
                { "key": "limit", "value": "{{limit}}" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Blog by Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": { "raw": "{{baseUrl}}/api/blogs/{{slug}}", "host": ["{{baseUrl}}"], "path": ["api", "blogs", "{{slug}}"] }
          },
          "response": []
        },
        {
          "name": "Create Blog (JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/blogs", "host": ["{{baseUrl}}"], "path": ["api", "blogs"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mastering the MERN Stack\",\n  \"subtitle\": \"A practical guide with real-world examples\",\n  \"slug\": \"mastering-mern-stack\",\n  \"tags\": [\"mern\", \"backend\", \"javascript\"],\n  \"coverImage\": \"https://cdn.devnovate.com/blogs/mern-cover.png\",\n  \"contentHTML\": \"<h1>Intro</h1><p>Welcome to MERN!</p><img src='https://cdn.devnovate.com/blogs/image1.png'><h2>Next Steps</h2><p>Keep learning...</p>\",\n  \"status\": \"pending\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Update Blog (JWT)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/blogs/{{blogId}}", "host": ["{{baseUrl}}"], "path": ["api", "blogs", "{{blogId}}"] },
            "body": {
              "mode": "raw",
