            "url": { "raw": "{{baseUrl}}/api/blogs/{{blogId}}/status", "host": ["{{baseUrl}}"], "path": ["api", "blogs", "{{blogId}}", "status"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"approved\"\n}"
